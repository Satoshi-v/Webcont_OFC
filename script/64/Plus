# Preguntar si reiniciar
color_text() {
    echo -e "\033[$1m$2\033[0m"
}
while true; do
    echo
    color_text "1;33" "SE RECOMIENDA REINICIAR EL SERVIDOR."
    color_text "1;33" "PARA QUE TODOS LOS SERVICIOS FUNCIONEN PERFECTAMENTE..."
    color_text "1;33" "DESEA REINICIAR EL SERVIDOR AHORA? (s/n): "
    read -n 1 -r REPLY
    echo
    if [[ $REPLY =~ ^[Ss]$ ]]; then
        color_text "1;32" "Reiniciando el servidor..."
        sudo reboot
        break
    elif [[ $REPLY =~ ^[Nn]$ ]]; then
        color_text "1;31" "Opto por no reiniciar el servidor."
        break
    else
        color_text "1;31" "Entrada inválida. Por favor, responda con 's' o 'n'."
    fi
done

# Limpieza final
rm -rf $HOME/Plus
cat /dev/null > ~/.bash_history
history -c
